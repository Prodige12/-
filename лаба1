#include <iostream>

int gcd(int a, int b, int& x, int& y) {
    if (b == 0) {
        x = 1;
        y = 0;
        return a;
    }

    int x1, y1;
    int d = gcd(b, a % b, x1, y1);

    x = y1;
    y = x1 - (a / b) * y1;

    return d;
}

int main() {
    int a, b;
    std::cout << "Enter two natural numbers A and B: ";//введите два натуральных числа
    std::cin >> a >> b;

    int x, y;
    int d = gcd(a, b, x, y);

    std::cout << "NOD(" << a << ", " << b << ") = " << d << std::endl;
    std::cout << "Numbers x and y for the equation ax + by = d: " << x << ", " << y << std::endl;
	//Числа x и y для уравнения ax + by = d

    return 0;
}
